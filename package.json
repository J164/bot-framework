{
  "name": "@j164/bot-framework",
  "version": "0.5.0",
  "author": {
    "name": "Jacob Edley",
    "email": "edleyjacob@gmail.com",
    "url": "https://github.com/J164"
  },
  "description": "A framework for building Discord bots using discord.js",
  "homepage": "https://github.com/J164/bot-framework",
  "license": "MIT",
  "repository": {
    "type": "github",
    "url": "https://github.com/J164/bot-framework"
  },
  "type": "module",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": ["build/"],
  "exports": {
    "import": "./build/index.js",
    "types": "./build/index.d.ts"
  },
  "engines": {
    "node": ">=20.5.0"
  },
  "dependencies": {
    "discord.js": "14.13.0",
    "mongodb": "6.0.0",
    "node-cron": "3.0.2",
    "pino": "8.15.0"
  },
  "devDependencies": {
    "@types/node": "20.8.4",
    "@types/node-cron": "3.0.8",
    "@vitest/coverage-v8": "0.34.3",
    "typescript": "5.2.2",
    "vitest": "0.34.3",
    "xo": "0.56.0"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm ci --omit=optional && npm run build",
    "lint": "xo",
    "test": "vitest run --coverage"
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 160
  },
  "xo": {
    "prettier": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:unicorn/recommended"
    ],
    "rules": {
      "default-case": "off",
      "no-return-assign": "off",
      "@typescript-eslint/explicit-function-return-type": "error",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/no-implicit-any-catch": "off",
      "@typescript-eslint/switch-exhaustiveness-check": "warn",
      "import/no-extraneous-dependencies": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  }
}
